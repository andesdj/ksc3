{% extends 'upload_base.html.twig' %}

{% block body %}

	<div class="content">
		<!--START FORM -->
		<div class="form-horizontal">
			<div class="panel panel-flat">
				<div class="col-md-6">

					<div class="panel-heading">
						<h5 class="panel-title">Users list</h5>
						<div class="panel-heading">

							<div class="row">
								<div class="container">
									<table class="table"> 
										<thead>
											<tr>
												<th>Id</th>
												<th>Username</th>
												<th>Name</th>
												<th>Surname</th>
												<th>Role</th>
												<th>Email</th>
												<th>Status</th>
												<th>Actions</th>
											</tr>
										</thead>
										<tbody>
											{% for user in users %}
												<tr>
													<td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
													<td>{{ user.username }}</td>
													<td>{{ user.name }}</td>
													<td>{{ user.surname }}</td>
													<td>{{ user.role }}</td>
													<td>{{ user.email }}</td>
													<td>{{ user.state?"Active" :"Inactive" }}</td>
													<td>
														<ul>
															<a href="{{ path('user_show', { 'id': user.id }) }}"><span class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true"></span> Show</a>

															<a href="{{ path('user_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a>

														</ul>
													</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>
								</div>	


								<div class="col-md-6">
									<a href="{{ path('user_new') }}">
									<button  type="submit" value="CREATE"  class="btn btn-primary"/>Create a user</button></a>
								</div>	

							</div>	
						</div>
					</div>	
				</div>
			</div>	
		</div>	
	</div>	



{% endblock %}
