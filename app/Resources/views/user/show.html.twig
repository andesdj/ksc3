{% extends 'upload_base.html.twig' %}
{% block body %}
	<div class="content">
		<!--START FORM -->
		<div class="form-horizontal">
			<div class="panel panel-flat">
				<div class="col-md-6">
					<div class="panel-heading">
						<h5 class="panel-title">User</h5>
						<div class="panel-heading">
							<div class="row">
								<div class="container">
									<table class="table"> 
										<tbody>
											<tr>
												<th>Id</th>
												<td>{{ user.id }}</td>
											</tr>
											<tr>
												<th>Username</th>
												<td>{{ user.username }}</td>
											</tr>
											<tr>
												<th>Name</th>
												<td>{{ user.name }}</td>
											</tr>
											<tr>
												<th>Surname</th>
												<td>{{ user.surname }}</td>
											</tr>
											<tr>
												<th>Role</th>
												<td>{{ user.role }}</td>
											</tr>
										<th>Email</th>
										<td>{{ user.email }}</td>
										</tr>
										<tr>
											<th>Status</th>
											<td>{{ user.state?"Active" :"Inactive" }}</td>
										</tr>

										{% if is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
											<tr>
												<th>Actions</th>
												<td>   <a href="{{ path('user_edit', { 'id': user.id }) }}">
														<button  type="submit" value="CREATE"  class="btn btn-primary"/>Edit</button></a></td>
											</tr>
										{%endif%}
										</tbody>
									</table>

									<a href="{{ path('user_index') }}"> 
										<button  type="submit" value="CREATE"  class="btn btn-primary"/>Back to the list</button></a>
									</a>
								</div>	
							</div>
						</div>	
					</div>
				</div>	
			</div>	
		</div>	
	{% endblock %}
